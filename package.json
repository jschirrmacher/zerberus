{
  "name": "zerberus",
  "version": "1.0.0",
  "description": "Software for a robot to chase racoons in your garden",
  "scripts": {
    "start": "concurrently -k 'npm:start-robot' 'npm:start-camera'",
    "start-robot": "sudo NODE_ENV=production npx ts-node robot | tee robot.log",
    "start-camera": "cd image_recognition && python3 use_classifier.py > ../camera.log",
    "simulator": "ts-node-dev --nolazy --watch --inspect -- robot",
    "lint": "eslint .",
    "test": "nyc --reporter=html --reporter=text-summary mocha",
    "build:types": "tsc -t es6 --moduleResolution node --outDir frontend types.ts && prettier -w ./frontend/types.js"
  },
  "keywords": [
    "rackoon",
    "self-driving car",
    "wild thumper",
    "robot"
  ],
  "engines": {
    "node": ">= 18"
  },
  "repository": {
    "url": "https://github.com/jschirrmacher/zerberus.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^6.2.1",
    "express": "^4.17.1",
    "i2c-bus": "^5.2.2",
    "pigpio": "^3.3.1",
    "readline": "^1.3.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/i2c-bus": "^5.1.0",
    "@types/mocha": "^8.2.3",
    "@types/should-sinon": "0.0.8",
    "@types/sinon": "^9.0.11",
    "@types/socket.io": "^2.1.11",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "mocha": "^8.4.0",
    "node-fetch": "^2.6.1",
    "nyc": "^15.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.3.2",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^10.0.0",
    "ts-node-dev": "^1.1.8"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}