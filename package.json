{
  "name": "zerberus",
  "version": "1.0.0",
  "description": "Software for a robot to chase racoons in your garden",
  "scripts": {
    "frontend:dev": "vite",
    "start": "concurrently -k 'npm:start-robot' 'npm:start-camera'",
    "start-robot": "sudo PATH=$PATH NODE_ENV=production bash -c 'npx ts-node robot | tee robot.log'",
    "start-camera": "cd image_recognition && python3 use_classifier.py > ../camera.log",
    "simulator": "ts-node robot",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit --composite false",
    "build": "npm run build:types && npm run build:frontend",
    "build:types": "tsc -t es6 --moduleResolution node --outDir frontend types.ts && prettier -w ./frontend/types.js",
    "build:frontend": "vite build",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "keywords": [
    "rackoon",
    "self-driving car",
    "wild thumper",
    "robot"
  ],
  "engines": {
    "node": ">= 18"
  },
  "repository": {
    "url": "https://github.com/jschirrmacher/zerberus.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@vue/test-utils": "2.3.2",
    "concurrently": "8.0.1",
    "express": "4.18.2",
    "i2c-bus": "5.2.2",
    "pigpio": "3.3.1",
    "pinia": "^2.0.21",
    "readline": "1.3.0",
    "sass": "1.62.1",
    "socket.io": "4.6.1",
    "socket.io-client": "4.6.1",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/i2c-bus": "5.1.0",
    "@types/socket.io": "3.0.1",
    "@typescript-eslint/eslint-plugin": "5.59.5",
    "@typescript-eslint/parser": "5.59.5",
    "@vitejs/plugin-vue": "4.2.3",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "0.4.0",
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-vue": "^9.3.0",
    "jsdom": "^22.0.0",
    "node-fetch": "3.3.1",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "prettier": "2.8.8",
    "ts-node-dev": "2.0.0",
    "vite": "4.3.8",
    "vitest": "0.31.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
