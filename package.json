{
  "name": "zerberus",
  "version": "1.0.0",
  "description": "Software for a robot to chase racoons in your garden",
  "scripts": {
    "frontend:dev": "vite",
    "start": "concurrently -k 'npm:start-robot' 'npm:start-camera'",
    "start-robot": "sudo PATH=$PATH NODE_ENV=production bash -c 'npx ts-node robot | tee robot.log'",
    "start-camera": "cd image_recognition && python3 use_classifier.py > ../camera.log",
    "simulator": "ts-node robot",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit --composite false",
    "build": "npm run build:types && npm run build:frontend",
    "build:types": "tsc -t es6 --moduleResolution node --outDir frontend types.ts && prettier -w ./frontend/types.js",
    "build:frontend": "npm run type-check && vitest --build-only",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "vitest --run --environment jsdom frontend",
    "test:frontend:watch": "vitest --environment jsdom frontend",
    "test:backend": "cd robot && nyc --reporter=html --reporter=text-summary mocha"
  },
  "keywords": [
    "rackoon",
    "self-driving car",
    "wild thumper",
    "robot"
  ],
  "engines": {
    "node": ">= 18"
  },
  "repository": {
    "url": "https://github.com/jschirrmacher/zerberus.git"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "concurrently": "8.0.1",
    "express": "4.18.2",
    "i2c-bus": "5.2.2",
    "pigpio": "3.3.1",
    "pinia": "^2.0.21",
    "readline": "1.3.0",
    "socket.io": "4.6.1",
    "socket.io-client": "4.6.1",
    "ts-node": "10.9.1",
    "typescript": "5.0.4"
  },
  "devDependencies": {
    "@types/express": "4.17.17",
    "@types/i2c-bus": "5.1.0",
    "@types/mocha": "10.0.1",
    "@types/sinon": "10.0.15",
    "@types/socket.io": "3.0.1",
    "@typescript-eslint/eslint-plugin": "5.59.6",
    "@typescript-eslint/parser": "5.59.6",
    "eslint": "8.40.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-vue": "^9.3.0",
    "expect": "^29.2.2",
    "jsdom": "^22.0.0",
    "mocha": "10.2.0",
    "node-fetch": "3.3.1",
    "nyc": "15.1.0",
    "pre-commit": "1.2.2",
    "prettier": "2.8.8",
    "sinon": "14.0.2",
    "ts-node-dev": "2.0.0"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
