{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": ["env.d.ts", "./**/*.ts"],
  "exclude": ["./**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
